<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#44000000"
    android:padding="3dp"
    >


    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_nomeTransacao_InfoGeral"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="despesa1"
                android:textColor="#000000"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/tv_ValorTransacao_InfoGeral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="30â‚¬"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"

                />
            <TextView
                android:id="@+id/tv_DataTransacao_InfoGeral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="15/12/2017"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"

                />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.3"
        android:orientation="horizontal"
        android:gravity="right">

        <Button
            android:id="@+id/btn_edit_linha"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:text=" "
            android:drawableLeft="@android:drawable/ic_menu_edit" />

        <Button
            android:text=" "
            android:layout_weight="1"
            android:id="@+id/btn_delete_linha"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawableLeft="@android:drawable/ic_menu_delete"
            />

    </LinearLayout>

</LinearLayout>